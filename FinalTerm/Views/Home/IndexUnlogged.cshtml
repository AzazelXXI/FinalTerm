@using System.Web.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

<!-- Search Bar & Header -->
<div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
        <h2><strong>Home</strong></h2>
        <input type="text" class="form-control w-50" placeholder="Search...">
        <a href="#" class="btn btn-light">Sign in</a>
    </div>
</div>

<!-- Banner -->
<div class="container">
    <div class="bg-secondary text-center text-white py-5">
        <h4>Banner</h4>
    </div>
</div>

<!-- Categories -->
<div class="container mt-4">
    <h4><strong>CATEGORIES</strong></h4>
    <div class="d-flex gap-3">
        <span class="badge bg-light text-dark p-3">Laptop</span>
        <span class="badge bg-light text-dark p-3">Phone</span>
        <span class="badge bg-light text-dark p-3">Tablet</span>
        <span class="badge bg-light text-dark p-3">Headphone</span>
        <span class="badge bg-light text-dark p-3">Monitor</span>
        <span class="badge bg-light text-dark p-3">CPU</span>
        <span class="badge bg-light text-dark p-3">GPU</span>
    </div>
</div>

<!-- Sales Section -->
<div class="container mt-4">
    <h4><strong>SALES</strong> 🔥</h4>
    <div class="row row-cols-5">
        @for (int i = 0; i < 10; i++)
        {
            <div class="col p-2">
                <div class="card p-2 text-center">
                    <div class="bg-secondary text-white py-5">Image</div>
                    <p>product_name</p>
                    <p><del>$0.00</del> <span class="text-danger">$0.00 (-0%)</span></p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Recommended Products -->
<div class="container mt-4">
    <h4><strong>Recommended</strong></h4>
    <div class="row row-cols-5">
        @for (int i = 0; i < 10; i++)
        {
            <div class="col p-2">
                <div class="card p-2 text-center">
                    <div class="bg-secondary text-white py-5">Image</div>
                    <p>product_name</p>
                    <p>$0.00</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer -->
<footer class="bg-light mt-4 p-3 text-center">
    <div class="d-flex justify-content-around">
        <a href="#">Privacy Policy</a>
        <a href="#">Shipping Policy</a>
        <a href="#">Payment and Refund</a>
    </div>
</footer>
